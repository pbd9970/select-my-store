<% if @user %>
  <header class="clearfix">
  <div class="row">
    <div class="large-2 columns logo">
      <img src="/images/logo/select-my-store-logo.jpg"/>
    </div>
    <div class="large-3 columns login">
      <form method="post" action="sign_in">
        <input type="text" placeholder="username" name="username" />
        <input type="password" placeholder="password" name="password" />
        <input type="submit" value="Login" class="button tiny" />
        <a href="#" class="button tiny">Sign Up</a>
      </form>
    </div>
  </div>
</header>
<% else %>
  <header class="clearfix">
  <div class="row">
    <div class="large-5 columns logo">
     <img src="/images/logo/select-my-store-logo.jpg"/>
    </div>
    <div class="large-3 columns login">
      <form method="post" action="/home">
        <input type="text" placeholder="username" name="username" />
        <input type="password" placeholder="password" name="password" />
        <div class="buttons">
          <input type="submit" value="Login" class="button tiny" />
          <a href="#" data-reveal-id="myModal" class="button tiny">Sign Up</a>
        </div>
      </form>
    </div>
  </div>
</header>
<% end %>
